            <div class="col-md-10"><!-- 2 colonnne plus grandes pour mettre les fiches(product) -->
                <hr>
                <h1 class="title2">Arts Martiaux</h1>
                <div class="row"><!-- rediviser pour que chaque fiches produits -->
                    {# twig boucle for #}
                    {% for product in products %}
                        <div class="col-md-4"><!-- fiche produits largeur -->
                                    <div class="title-item2">
                                        {# twig pour afficher la fiche produits #}
                                        <h2>{{ product.name }}</h2>
                                    </div><!-- /.title-item2 -->
                                    <div class="image-arts"><!-- css classe pour habiller la fiche -->
                                        {# twig pour afficher le slug #}
                                        <a href="{{ path('product',{'slug': product.slug})}}"> 
                                        {# fonctions twig pour afficher l'image du produits/nom/subtitle #}
                                        <img src="/uploads/{{ product.illustration }}" 
                                        alt="{{ product.name }}" title="{{ product.subtitle}}" class="img-fluid" width="400" 
                                        height="400"></a></br>
                                    </div><!-- /.image-arts -->
                                    <hr>
                        </div><!-- /.col-md-4 -->
