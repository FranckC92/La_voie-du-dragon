{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} - MeubleDeco2.0{% endblock %}

{% block content %}
<div class="row">
           <div class="col-md-5">
                <img src="/uploads/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid">
           </div>
           <div class="col-md-7 my-auto">
               <h3 class="product-title2">{{ product.name }} </h3>
               <p>{{ product.subtitle }}</p>
               
               <hr>
               <p>
                   {{ product.description}}
               </p>
               


           </div>
</div>
        
            
       
{% endblock %}
