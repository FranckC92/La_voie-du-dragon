{% extends 'base.html.twig' %}
{# twig pour titre #}
{% block title %}Mon article- La voie du Dragon{% endblock %}
{# twig content pour afficher le contenue ci dessous #}
{% block content %}
    {# fonction twig/ci dessous pour afficher le nom & descriptions #}
    <h1 class="title-item">{{ blog.name|upper|raw }}</h1>
    <div class="row">
        <div class="col-md-7">
                <div class="blog-item"> {{ blog.description|upper|raw}}{# won't be escaped #}  
                </div><!-- /.blog-item -->
            <hr>{# fonction twig/ci dessous pour afficher l'url #}
            <span>{{ blog.url|upper|raw }}{# won't be escaped #}</span>
            <hr>{# fonction twig/ci dessous pour afficher l'email #}
            <span>{{ blog.email|upper|raw}}{# won't be escaped #}</span>
            {# ancre avec finction twig pour envoyer sur l url avec un bouton #}      
            <a href="{{blog.url|upper|raw}}" {# won't be escaped #} class="btn btn-primary" target="_blank">Aller sur le site</a>
        </div><!-- /.col-md-7 -->    
        <div class="col-md-5 mx-xl-auto">
            {# fonction twig pour afficher l 'image de l'article avec le nom/subtitle #}
            <img src="/uploads/{{ blog.illustration }}" alt="{{ blog.name|upper|raw }}" {# won't be escaped #}
             title="{{ blog.subtitle|upper|raw}}" {# won't be escaped #} class="img-fluid">
            {# fonction twig/ci dessous pour afficher le subtitle #}
            <span class="subtitle-item">{{ blog.subtitle|upper|raw}}{# won't be escaped #}</span>
        </div><!-- /.col-md-5 my-xl-auto -->    
    </div><!-- /.row -->
{% endblock %}{# twig fin du contenu #}
