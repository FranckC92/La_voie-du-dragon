{% extends 'base.html.twig' %}

{% block title %}Le Blog- La voie du Dragon{% endblock %}

{% block content %}
<div class="row">
    <hr>
    <h2 class="title">Blog</h2>
        <div class="row">
            {% for blog in blogs %}
        <div class="col-md-4">
            <div class="product-item text-center">
                <h5 class="title-item">{{ blog.name }}</h5>
                    <a href="{{ path('app_blog',{'slug': blog.slug})}}"> 
                    <img src="/uploads/{{ blog.illustration }}" 
                alt="{{ blog.name }}" class="img-fluid"></a>
                
                <span class="subtitle-item ">{{ blog.subtitle}}</span>
                <span class="">{{ blog.url }}</span> 
        
            
            </div>
        
       </div>
    {% endfor %}    
    </div>

           
    
</div>
{% endblock %}
