{% extends 'base.html.twig' %}
{# twig pour titre #}
{% block title %}Le Blog- La voie du Dragon{% endblock %}
{# twig content pour afficher le contenue ci dessous #}
{% block content %}
    <div class="row">
        <h1 class="title">Blog</h1>
        <div class="col-md-2"><!-- diviser en 2 colonnes/1 er colonne pour la barre de recherche -->
            <h2 class="">Filtre</h2><!-- class css habiller barre de rechercher -->
               {# j utilise twig pour envoyer deux images de dragon #}
               <img src="{{ asset('assets/img/yingyang2.jpg')}}" class="img-responsive" alt="img-fluid" title="dragon"
               width="150" height="auto">
            <div class=""><!-- class css pour habiller form -->
                {# twig pour envoyer le formulaire #}
                 {{ form(form)|raw }} {# won't be escaped #}
            </div><!-- /.form3 -->
            <img src="{{ asset('assets/img/yingyang2.jpg')}}" class="img-responsive" alt="img-fluid" title="dragon"
            width="150" height="auto">
        </div><!-- /.col-md-2 -->
        <div class="col-md-10"><!-- 2 colonnne plus grandes pour mettre les articles du blog -->
            <div class="row">
                {# fonction twig/ avec boucle for #}
                {% for blog in blogs %}
                        <div class="col-md-4">
                            <div class="product-item text-center">
                            </div><!-- /. product-item text-center -->
                                    {# fonction twig/ci dessous pour afficher le nom du blog #}
                                    <h5 class="title-item">{{ blog.name|upper|raw }}</h5>{# won't be escaped #}
                                    <div class="blog-image">
                                        {# fonction twig/ancre avec slug#}
                                        <a href="{{ path('app_blog',{'slug': blog.slug|upper|raw})}}">{# won't be escaped #}
                                             {# fonction twig pour afficher l 'image de l'article avec le nom/subtitle #}
                                            <img src="/uploads/{{ blog.illustration }}" alt="{{ blog.name|upper|raw }}" 
                                            title="{{ blog.subtitle|upper|raw}}" class="contain narrow4">
                                        </a>
                                        {# fonction twig/ci dessous pour afficher le subtitle #}
                                    </div><!-- /.blog-image --> 
                                <span class="subtitle-item ">{{ blog.subtitle|upper|raw}}{# won't be escaped #}</span>
                                </div><!-- /.col-md-4 mx-auto -->
            {% endfor %}{# twig fin de la boucle for #} 
        </div><!-- /.row -->  
        </div><!-- /.col-md-10 -->
    </div><!-- /.row -->    
{% endblock %}{# twig fin du contenu #}
