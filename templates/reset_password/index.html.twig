{# twig pour étendre ma base.html #}
{% extends 'base.html.twig' %}
{# twig pour titre #}
{% block title %}Mot de passe oublié- La voie du dragon{% endblock %}
{# twig content pour afficher le contenue ci dessous #}
{% block content %}
    <div class="block-small">
            {# twig boucle for #}
            {% for message in app.flashes('notice')%}
            {# alert et fonction twig pour messages #}
            <div class="alert alert-info">{{ message }}
            </div><!-- /.alert alert-info -->
            {% endfor %}{# twig fin de la boucle for #}
            <hr>
            <!-- formulaire avec la methode post pour que cela s affiche -->
            <form method="post">
                <div class="form2"><!-- class css pour habiller formulaire -->
                     {# twig pour afficher le logo #}
                    <img src="/assets/img/{{ 'logo.png' }}"class="amg-fluid" 
                    alt="logo " title="Logo la voie du Dragon" width="300" >
                    <h1 class="style3">Réinitialiser mon mot de passe</h1>
                    <label for="inputEmail" class="style4">Votre email</label>
                    <input type="email" name="email" id="inputEmail" class="form-control" placeholder="Votre adresse email" required autofocus>
                    <button class="btn btn-lg btn-primary btn-sm" type="submit">
                        Réinitialiser mon mot de passe
                    </button>
                </div><!-- /. form2 -->
                <hr>{# fonction twig pour envoyer la route sur inscriptions #}
                <p class="text-center">Pas encore inscrit?<a href="{{path('app_register') }}">
                        creer un compte</a>
                </p>
                <hr>{# fonction twig pour envoyer la route  pour se logger #}
                <p class="text-center">Ou souhaitez-vous<a href="{{ path('app_login') }}">
                        Vous connecter</a>?</p>
            </form><!-- /.fin du formulaire -->
    </div><!-- /.block-small -->
{% endblock %}{# twig fin du contenue #}
